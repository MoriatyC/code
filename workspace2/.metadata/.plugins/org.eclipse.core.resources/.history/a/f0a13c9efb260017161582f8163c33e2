package com.DLUT.SIE.my_crawler;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;
import java.util.regex.Matcher;
import java.util.regex.Pattern;
import org.apache.http.*;
public class App 
{
	public static String getPage(String url){
        String result = "";
        BufferedReader in = null;
        	try {
				URL realUrl = new URL(url);
				URLConnection conn = realUrl.openConnection();
				conn.connect();
				in = new BufferedReader(new InputStreamReader(conn.getInputStream()));
				String line;
				while((line = in.readLine()) != null)
				{
					result += line + "\n";
				}
			} catch (Exception e) {
				System.out.println("请求失败" + e);
				// TODO Auto-generated catch block
				e.printStackTrace();
			} 
        	finally{
        		if(in != null)
					try {
						in.close();
					} catch (IOException e) {
						System.out.println("关闭失败");
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
        	}
        	return result;

	}
	static public String extract(String resutlt, String regex){
		Pattern pat = Pattern.compile(regex);
        Matcher matcher = pat.matcher(resutlt);
        if(matcher.find())
        {
        	int index = matcher.groupCount();
        	resutlt = matcher.group(index);
        	return resutlt;
        }
        else
        	return "Nothing matches";
        
	}
    public static void main( String[] args )
    {
        String url = "http://tieba.baidu.com/f?ie=utf-8&kw=%E6%94%BE%E5%BC%80%E9%82%A3%E4%B8%89%E5%9B%BD2&fr=search&red_tag=q1597673189";
        String result = getPage(url);
//        System.out.println(result);
//        <a class="question_link" href="/question/34419336/answer/157117177" data-id="5974156" data-za-element-name="Title">
//        如何评估地方政府融资平台的还款能力？
//        </a>
        result = extract(result, "question_link\" href=\"(.+?)\"");
//                                  question_link.+?href=\"(.+?)\"
        System.out.println(result);
    }
}
