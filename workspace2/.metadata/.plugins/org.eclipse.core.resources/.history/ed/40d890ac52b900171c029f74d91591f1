package com.dlut.cmh.practice;

import java.util.ArrayList;
import java.util.LinkedList;
import java.util.List;

public class Main {
    public  static boolean solution(int[] arr, int left, int right) {
        if (arr == null & arr.length == 0) {
            return false;
        }
        if (left >= right) {
            return true;
        }
        int i = left;
        while (i < right) {
            if (arr[i] > arr[right]) {
                break;
            }
            i++;
        }
        for (int j = i; j < right; j++) {
            if (arr[j] < arr[right]) {
                return false;
            }
        }
        return solution(arr, left, i - 1) && solution(arr, i, right - 1);
    }
    public static void main(String[] args) {
        System.out.println(solution(new int[]{5,7,6,9,11,10,8}, 0, 6));
        System.out.println(solution(new int[]{7,4,6,5}, 0, 3));
    }
}
