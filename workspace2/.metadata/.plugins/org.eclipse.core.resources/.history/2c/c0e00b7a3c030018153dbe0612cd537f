public class RedisJava extends Thread{
   
    public static void main(String[] args) {
        Jedis conn = new Jedis("localhost");
        String[] arr = {"23", "15", "110", "7"};
        SortingParams sp = new SortingParams();
//        sp.alpha();
//        sp.desc();
