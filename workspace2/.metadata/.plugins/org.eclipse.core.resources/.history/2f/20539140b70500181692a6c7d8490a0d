package concurrentdemo;
/** 
* @author : Menghui Chen 
* @version ：2018年1月30日 下午8:03:06 
* @Description:
*/
public class Philosopher implements Runnable{
    static int[] arr = {1,1,1,1,1};
    int index;
    public Philosopher(int index) {
        this.index = index;
    }
    @Override
    public void run() {
        eat(index);
        think(index);
    }
    public void think(int index) {
        try {
            Thread.sleep(100);
        } catch (InterruptedException e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        }
    }
    public void eat(int index) {
        while (true) {
            if (arr[index] != 0) {
                arr[index]--;
                break;
            }
        }
        while (true) {
            if (arr[(index + 1) % 5] != 0) {
                arr[(index + 1) % 5]--;
                break;
            }
        }
        System.out.println(index + " is eating");
        arr[index]++;
        arr[(index + 1) % 5]++;
    }
    public static void main(String[] args) {
        Thread p1 = new Thread(new Philosopher(1));
        Thread p2 = new Thread(new Philosopher(2));
        Thread p3 = new Thread(new Philosopher(3));
        Thread p4 = new Thread(new Philosopher(4));
        Thread p5 = new Thread(new Philosopher(5));
        p1.start();
        p2.start();
        p3.start();
        p4.start();
        p5.start();
        
    }
}
