package first_maven;

public class Main   {
    public static boolean isNumeric(char[] str) {
        if (str == null || str.length == 0) {
            return false;
        }
        boolean ret = true;
        int i = 0;
        if (str[i] == '+' || str[i] == '-') {
            i++;
        } 
        if (isDigit(str[i])) {
            while (isDigit(str[i])) {
                i++;
                if (i == str.length) {
                    return ret;
                }
            }
            if (str[i] == 'e' || str[i] == 'E') {
                i++;
                if (str[i] == '+' || str[i] == '-') {
                    i++;
                }
                for (; i < str.length; i++) {
                    if (!isDigit(str[i])) {
                        ret = false;
                        break;
                    }
                }
            } else if (str[i] == '.') {
                for (; i < str.length; i++) {
                    if (!isDigit(str[i])) {
                        ret = false;
                        break;
                    }
                }
            } else {
                ret = false;
            }
            
        } else {
            ret = false;
        }
        return ret;
    }
    public static boolean isDigit(char c) {
        return c >= '0' && c <= '9';
    }
    public static void main(String args[]) {
        System.out.println(isNumeric("100".toCharArray()));
    }
}