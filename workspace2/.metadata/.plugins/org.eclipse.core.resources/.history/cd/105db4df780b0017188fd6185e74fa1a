package first_maven;
import java.util.Random;
import java.util.*;
import java.util.Map.Entry;
import java.util.stream.IntStream;
 class TreeNode {
	      int val;
	    TreeNode left;
	    TreeNode right;
	     TreeNode(int x) { val = x; }
 }
   class ListNode {
	      int val;
	     ListNode next;
	      ListNode(int x) { val = x; }
	 }
public class Demo {

	public static void main(String[] args) {
		int[] nums = {4,14,2};
	     int total = 0;
	        StringBuffer[] bn = new StringBuffer[nums.length];
	        int temp;
	        for(int i = 0; i < nums.length; i++)
	        {
	            temp = nums[i];
	            total = total | nums[i];
	            bn[i] = new StringBuffer();
	            while(temp > 0)
	            {
	            	System.out.println(temp & 1);
	                bn[i].append(temp & 1);
	                temp = temp << 2;
	            }
	            bn[i].reverse();
	            
	        }
	        for(int i = 0; i < nums.length; i++)
	        {
	            System.out.println(bn[i].toString());
	        }
		   
	}

}


 
