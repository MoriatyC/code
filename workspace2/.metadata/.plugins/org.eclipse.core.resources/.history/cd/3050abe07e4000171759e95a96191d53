package first_maven;

public class Demo  {
   static int cal(int a, int b, char operator) {
        switch(operator) {
            case '+': return a + b;
            case '-': return a - b;
            case '*': return a * b;
            default : return  0; 
        }
    }
  public static void main(String[] args) throws InterruptedException {
      System.out.println(cal(3,2,'*'));
      StringBuilder sb = new StringBuilder();
      sb.setLength(1);
      System.out.println(sb.toString());
  }
}