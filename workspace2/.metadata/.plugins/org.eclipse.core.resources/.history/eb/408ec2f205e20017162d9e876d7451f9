package first_maven;

public class Main   {
    public  boolean isNumeric(char[] str) {
        if (str == null || str.length == 0) {
            return false;
        }
        boolean ret = true;
        int i = 0;
        if (str[i] == '+' || str[i] == '-') {
            i++;
        }
        boolean first = true;
        if (str[i] == '.') {
            i++;
            first = false;
        }
        if (isDigit(str[i])) {
            while (isDigit(str[i])) {
                i++;
                if (i == str.length) {
                    return ret;
                }
            }
            if (str[i] == '.') {
                if (!first) {
                    return false;
                }
                i++;
            }
            while (isDigit(str[i])) {
                i++;
                if (i == str.length) {
                    return ret;
                }
            }
            if (str[i] == 'e' || str[i] == 'E') {
                i++;
                if (str[i] == '+' || str[i] == '-') {
                    i++;
                }
                for (; i < str.length; i++) {
                    if (!isDigit(str[i])) {
                        ret = false;
                        break;
                    }
                }
            }  else {
                ret = false;
            }
            
        } else {
            ret = false;
        }
        return ret;
    }
    public  boolean isDigit(char c) {
        return c >= '0' && c <= '9';
    }
    public static void main(String args[]) {
        Main m = new Main();
        System.out.println(m.isNumeric("12e".toCharArray()));
    }
}