package com.dlut.cmh.demo;
public class App {
    public static void Main(String[] args) {
        int x = sc.nextInt();
        int f = sc.nextInt();
        int d = sc.nextInt();
        int p = sc.nextInt();
        int ret = 0;
        while (f-- > 0 && d >= x) {
            ret++;
            d -= x;
            if (f == 0) {
                d -= p;
                f = 1;
            }
        }
        System.out.println(ret);
    }
}
