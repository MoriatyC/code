package com.DLUT.SIE.my_crawler;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;
import java.util.regex.Matcher;
import java.util.regex.Pattern;
import org.apache.http.*;
public class App 
{
	public static String getPage(String url){
        String result = "";
        BufferedReader in = null;
        	try {
				URL realUrl = new URL(url);
				URLConnection conn = realUrl.openConnection();
				conn.connect();
				in = new BufferedReader(new InputStreamReader(conn.getInputStream()));
				String line;
				while((line = in.readLine()) != null)
				{
					result += line + "\n";
				}
			} catch (Exception e) {
				System.out.println("请求失败" + e);
				// TODO Auto-generated catch block
				e.printStackTrace();
			} 
        	finally{
        		if(in != null)
					try {
						in.close();
					} catch (IOException e) {
						System.out.println("关闭失败");
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
        	}
        	return result;

	}
	static public String extract(String resutlt, String regex){
		Pattern pat = Pattern.compile(regex);
        Matcher matcher = pat.matcher(resutlt);
        StringBuilder sb = new StringBuilder();
        while(matcher.find())
        {
        	sb.append(matcher.group(1));
        }
        if(sb.toString().equals(""))       
        {
        	return "Nothing matches";
        }
        else
        {
        	return sb.toString();
        }
        
	}
    public static void main( String[] args )
    {
    	StringBuilder sb = new StringBuilder();
System.out.println(sb.toString() == "");
        String url = "http://gs.dlut.edu.cn/";
        String result = getPage(url);
//        System.out.println(result);
        result = extract(result, "title=\"(.+?)\">");
        System.out.println(result);
    }
}
